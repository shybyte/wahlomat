{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "jsx": "preserve",
    "experimentalDecorators": true,
    "allowJs": true,
    "outDir": "tmp",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true
  },
  "exclude": ["node_modules", "config", "dev-server.js", "typings", "tmp"]
}
